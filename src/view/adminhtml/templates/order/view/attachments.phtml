<?php

declare(strict_types=1);

/**
 * @var Attachments $block
 * @var Escaper $escaper
 */

use JcElectronics\ExactOrders\Api\Data\AttachmentInterface;
use JcElectronics\ExactOrders\Block\Adminhtml\Order\View\Attachments;
use Magento\Framework\Escaper;

$attachments = $block->getAttachments();
?>

<section class="admin__page-section">
    <div class="admin__page-section-title">
        <span class="title"><?= $escaper->escapeHtml(__('Order Attachments')) ?></span>
    </div>
    <div class="admin__page-section-content">
        <?php if (count($attachments)):?>
            <table>
                <?php /** @var AttachmentInterface $attachment */ ?>
                <?php foreach ($attachments as $attachment): ?>
                <tr>
                    <td>
                        <a href="<?= $escaper->escapeUrl($block->getUrl('exactorders/attachment/view', ['id' => $attachment->getId()])) ?>">
                            <?= $escaper->escapeHtml($attachment->getFileName()) ?>
                        </a>
                    </td>
                </tr>
                <?php endforeach; ?>
            </table>
        <?php else: ?>
            <?= $escaper->escapeHtml(__('There are no attachments.')) ?>
        <?php endif ?>
    </div>
</section>
